# AI Study Architect Backend Configuration

# API Settings
API_VERSION=v1
DEBUG=True
SECRET_KEY=your-secret-key-here  # Generate with: openssl rand -hex 32
ALLOWED_HOSTS=localhost,127.0.0.1

# Database Configuration
# Use a dedicated app user, NOT the postgres superuser
POSTGRES_USER=aiuser
POSTGRES_PASSWORD=your-strong-password-here  # Generate with: openssl rand -base64 32
POSTGRES_DB=ai_study_architect
POSTGRES_HOST=localhost
POSTGRES_PORT=5433

# Redis Configuration (Optional - falls back to in-memory cache)
# REDIS_URL=redis://localhost:6379/1
# REDIS_HOST=localhost
# REDIS_PORT=6379
# REDIS_DB=1

# Upstash Redis (Optional - REMOVED, using MockRedisClient)
# UPSTASH_REDIS_REST_URL=<not needed>
# UPSTASH_REDIS_REST_TOKEN=<not needed>

# JWT Settings
JWT_SECRET_KEY=your-jwt-secret-here  # Generate with: openssl rand -hex 32
JWT_ALGORITHM=RS256
JWT_ACCESS_TOKEN_EXPIRE_MINUTES=30
JWT_REFRESH_TOKEN_EXPIRE_DAYS=7

# CORS Settings
BACKEND_CORS_ORIGINS=http://localhost:3000,http://localhost:5173,https://www.aistudyarchitect.com,https://aistudyarchitect.com,https://ai-study-architect.vercel.app

# File Upload Settings
MAX_UPLOAD_SIZE=52428800  # 50MB
ALLOWED_UPLOAD_EXTENSIONS=pdf,docx,pptx,txt,md,jpg,jpeg,png,mp3,mp4,wav
UPLOAD_DIR=uploads

# AI Service Configuration (Priority: Claude â†’ OpenAI)

# Claude (Anthropic) - PRIMARY for superior educational experience
# Get key from: https://console.anthropic.com/
ANTHROPIC_API_KEY=your-anthropic-api-key-here
CLAUDE_MODEL=claude-3-5-sonnet-20241022

# OpenAI - FALLBACK when Claude is unavailable
# Get key from: https://platform.openai.com/api-keys
OPENAI_API_KEY=your-openai-api-key-here
OPENAI_MODEL=gpt-4-turbo-preview